<div class="container">
	<div class="row">
		<div class="col text-right">
			<%= link_to 'New Post', new_admin_post_path, class: 'btn btn-success' %>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<table class="table table-hover table-bordered">
				<% @posts.each do |post| %>
					<tr>
						<th>Title</th>
						<th>Content</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
					<tr>
						<td><%= link_to post.title, admin_post_path(post) %></td>
						<td><%= post.content.to_plain_text.truncate(300) %></td>
						<td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-info' %></td>
						<td><%= link_to 'Delete', [:admin, post], method: :delete, class: 'btn btn-danger' %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>